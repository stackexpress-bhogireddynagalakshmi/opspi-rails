   <div class="mb-4">
     <h1 class="display-4">Web Hosting SALE</h1>
   </div>

   <div class="mb-4">
     <h3>Free SSL & CloudFlare included</h3>
   </div>

   <div>
      <%= link_to 'BUY NOW', '#', class: 'btn btn-primary spree-btn px-5' %>
   </div>

  </div>

  <img class="lazyload hero-image position-absolute"
    data-src="<%= asset_path('homepage/main_banner.jpg') %>"
    data-srcset="<%= image_source_set('homepage/main_banner') %>"
    alt="">

