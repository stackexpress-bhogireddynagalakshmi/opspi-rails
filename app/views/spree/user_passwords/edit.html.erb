<style>
.navbar-img{
  max-width: 100%;
  max-height: 3.5rem;
  margin-left:5px;
}
# margin-top: -610px;margin-left:10px
</style>


<body class="d-flex align-items-center bg-auth border-top border-top-2 border-primary">

<div class="container user-passwords">
<a href="<%= spree.root_path %>" style="position:absolute;left:0;top:0;margin-top:5px">
<%= image_tag 'OpsPi-logo.png', class: "navbar-img" %>
</a>

  <div class="row">
    <div class="col-lg-12">
      <div class="mb-3 user-passwords-no-border">
        
        <div class="container">
        <%= render "spree/shared/error_messages", target: resource %>
          <div class="row align-items-center">
            <div class="col-12 col-md-6 offset-xl-2 offset-md-1 order-md-2 mb-5 mb-md-0">
        
              <!-- Image -->
              <div class="text-center">
              <%#=image_tag('coworking')%>
              <%= image_tag 'coworking.svg', class: "img-fluid" %>
              </div>
        
            </div>
            <div class="col-12 col-md-5 col-xl-4 order-md-1 my-5">
        
              <!-- Heading -->
              <h1 class="display-4 text-center mb-3">
                Forgot Password
              </h1>
        
              <!-- Subheading -->
              <p class="text-muted text-center mb-5">
              </p>
        
              <!-- Form -->
              <%= form_for @spree_user, as: :spree_user, url: spree.update_password_path, method: :put do |f| %>
              <form>
        
              <!-- Password -->
              <div class="form-group">
        
                <!-- Label -->
                <label class="form-label">
                  Password
                </label>
        
                <!-- Input group -->
                <div class="input-group input-group-merge">
        
                  <!-- Input -->
                  <%= f.password_field :password, class: 'form-control pwd', placeholder: Spree.t(:password) %>
        
                  <!-- Icon -->
                  <span class="input-group-text eye_icon">
                    <i class="fe fe-eye"></i>
                  </span>
        
                </div>
              </div>
        
              <!-- Password -->
              <div class="form-group">
        
                <!-- Label -->
                <label class="form-label">
                  Confirm Password
                </label>
        
                <!-- Input group -->
                <div class="input-group input-group-merge">
        
                  <!-- Input -->
                  <%= f.password_field :password_confirmation, class: 'form-control pwd1', placeholder: Spree.t(:confirm_password) %>
        
                  <!-- Icon -->
                  <span class="input-group-text eye_icon1">
                    <i class="fe fe-eye"></i>
                  </span>
        
                </div>
              </div>
        
                <!-- Submit -->
                <%= f.hidden_field :reset_password_token %>
                <%= f.submit "Reset Password",class: 'btn btn-lg w-100 btn-primary mb-3' %>
        
                <!-- Link -->
                <div class="text-center">
                  <small class="text-muted text-center">
                    Remember your password? <%= link_to Spree.t('log_in'), spree_login_path %>.
                  </small>
                </div>
        
              </form>
              <%end%>
        
            </div>
          </div> <!-- / .row -->
        </div> <!-- / .container -->
        
      </div>
    </div>
  </div>
</div>

<!-- CONTENT
================================================== -->



</body>

<script type="text/javascript">

if($('span').hasClass("field_with_errors")){
  $('.field_with_errors').contents().unwrap();
}

$(document).ready(function() {
  $(".eye_icon").on('click',function() {
    if ($(".pwd").prop('type') === 'password') {
        $(".pwd").prop('type', 'text');
    } else {
        $(".pwd").prop('type', 'password');
    }
});
});

$(document).ready(function() {
  $(".eye_icon1").on('click',function() {
    if ($(".pwd1").prop('type') === 'password') {
        $(".pwd1").prop('type', 'text');
    } else {
        $(".pwd1").prop('type', 'password');
    }
});
});

</script>