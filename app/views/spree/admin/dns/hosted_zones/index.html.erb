<div class="header">
  <div class="header-body">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="header-title">
        DNS Domains
        </h1>
        
      </div>
      <div class="col-auto">
      <%#= button_link_to Spree.t(:add_domain),
      new_admin_dns_hosted_zone_url,
      class: "btn btn-primary lift",
        icon: 'add.svg',
        id: 'admin_new_order' %>
      </div>
    </div>

  </div>
</div>


<% if current_spree_user.isp_config_id.present? %>
<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:add_domain),
    new_admin_dns_hosted_zone_url,
    class: "btn btn-primary lift",
      icon: 'add.svg',
      id: 'admin_new_order' %>
<% end  %>

<% if @hosted_zones.any? %>
<div data-nav-x-wrapper>
  <div data-nav-x-container>
    <table class="table" id="listing_orders" data-hook data-nav-x-content>
      <thead>
        <tr data-hook="admin_orders_index_headers">
          <th>Host Name</th>
          <!--th>Status</th-->
          <th data-hook="admin_orders_index_header_actions" class="actions"></th>
        </tr>
      </thead>
      <tbody>
      <% @hosted_zones.each do |hosted_zone| %>
        <tr data-hook="admin_orders_index_rows">
          <td><%=link_to hosted_zone.origin, dns_admin_dns_hosted_zone_path(hosted_zone.id), class: hosted_zone %></td>
          <!--td><%="Active"%></td-->
          <td class='actions' data-hook="admin_orders_index_row_actions">
            <span class="d-flex justify-content-end">
              <%= link_to_edit_url edit_admin_dns_hosted_zone_path(hosted_zone.id), no_text: true %>
              <%= link_to_delete "Delete", url: admin_dns_hosted_zone_path(hosted_zone.id), no_text: true %>
            </span>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Spree.t(:no_dns_domain_found) %>
  </div>
<% end %>
<% else %>
<div class="alert alert-light no-objects-found">
    <%#= Spree.t(:you_need_to_purchase_linux_plan_to_continue) %>
 <%#= link_to(Spree.t(:add_one), new_admin_product_url) if can? :create, Spree::Product %>
 <label class="form-label" style="margin-top: 0.5rem;"> You Need To Purchase Linux Plan To Continue!</label>
 </div>
<%end%>

<script type="text/javascript">
  
  $(function () {
  $('[data-toggle="tooltip"]').tooltip();
})
</script>

<script type="text/javascript">
  $(document).ready(function (argument) {
    $('#FlashAlertsContainer').removeClass('d-none');
  });
</script>