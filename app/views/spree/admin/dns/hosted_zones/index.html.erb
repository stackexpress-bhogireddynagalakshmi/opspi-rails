<div class="header mt-4">
  <div class="header-body">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="header-title">
         DNS Zones
        </h1>
        
      </div>
      <div class="col-auto">
      <% if current_spree_user.isp_config_id.present? %>
        <%= button_link_to Spree.t(:add_dns_zone),
        new_admin_dns_hosted_zone_url,
        class: "btn btn-primary lift",
          icon: 'add.svg',
          id: 'admin_new_dns_zone' %>
      <% end  %>
      </div>
    </div>
    </div>

<%= flash_messages %>

<% if @hosted_zones.any? %>
<div class="container mt-4 mb-4">
<%= render partial: 'rows', collection: @hosted_zones, as: :hosted_zone %>
</div>
<% else %>
  <div class="alert alert-secondary no-objects-found mt-4">
    <label class="form-label" style="margin-top: 0.5rem;"> No Dns Domain Found</label>
  </div>
<% end %>

<%= render partial: '/spree/admin/shared/modal/modal' %>

<script type="text/javascript">
  $(function () {
  $('[data-toggle="tooltip"]').tooltip();
})
</script>

<script type="text/javascript">
  $(document).ready(function (argument) {
    $('#FlashAlertsContainer').removeClass('d-none');

    $(document).on('click', '.configure-dns-modal-link', function(){
      var serverName = $(this).data('origin');
      var ns1 = $(this).data('ns1');
      var ns2 = $(this).data('ns2');
      var webId = $(this).data('webid');
      var check_val = webId === undefined ? "" : "checked"
      $('#exampleModalLabel').html("DNS Configuration Details");
      $('#exampleModal .modal-body').html(`
        <table>
          <tbody>
            <tr>
              <td><b>Domain:</b></td>
              <td>${serverName}</td>
            </tr>
            <tr>
              <td><b>Nameserver 1:</b></td>
              <td>${ns1}</td>
            </tr>
            <tr>
              <td><b>Nameserver 2:</b></td>
              <td>${ns2}</td>
            </tr>
            <tr>
              <td><b>Enable Web Service:</b></td>
              <td>
              <div class="form-check form-switch">
              <input class="form-check-input" name="web_service" type="checkbox" value =${webId}  id="flexSwitchCheckDefault_${webId}" data_web_domain_name=${serverName} onclick= 'webService(this);' ${check_val}>
              </div>
              </td>
            </tr>
          </tbody>
        </table>
      `);
      $('#modal-save-button').hide();
      $('#exampleModal').modal('show');
    });
  });

  var webService = function(element){
    var webDomainId = element.value;
    var webDomainName = element.attributes.data_web_domain_name.value;
    if (webDomainId == "undefined") {
      var dataConfirm = "Are you sure to Activate this Domain?";
      var origin = webDomainName;

      result = confirm(dataConfirm);
      if (result) {
        setTimeout(function(){
          $.ajax({
            type: "POST",
            url: "/admin/dns/hosted_zones/enable_web_service",
            data: { 
              website: {
                web: origin
              }
            }
          });
        } ,5);
      }
    }
    else {
      var dataConfirm = "Are you sure to Deactivate this Domain?, This will affect your other services";
      var web_id = webDomainId;

      result = confirm(dataConfirm);
      if (result) {
        setTimeout(function(){
          $.ajax({
            type: "POST",
            url: "/admin/dns/hosted_zones/enable_web_service",
            data: { 
              website: {
                web: web_id
              }
            }
          });
        } ,5);
      }
    }

  } 
</script>