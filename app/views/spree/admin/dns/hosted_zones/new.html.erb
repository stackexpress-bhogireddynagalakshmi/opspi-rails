<style type="text/css">
  .formSuccess{
    color: green;
  }
</style>
<div class="header mt-4">
  <div class="header-body">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="header-title">
        <%= link_to Spree.t(:dns_zones), spree.admin_dns_hosted_zones_url %> / <%=Spree.t(:new_dns_zone)%>
        </h1>
        
      </div>
      <div class="col-auto">
      </div>
    </div>

  </div>
</div>

<%= flash_messages %>

<%=form_for :hosted_zones, url: admin_dns_hosted_zones_path,html: {method: :post} do |f|%>
  <fieldset>
    <div class="form-group">
      <label class="form-label" >Domain Name (eg:example.com)</label>
      <%=f.text_field :name, class: 'form-control', id:"dname", pattern: DNS_ORIGIN_ZONE_REGEX, title: "Please follow the correct format",required: true %>
    </div>
    <div class="form-group">
      <label class="form-label">Email (eg: webmaster@example.com)</label>
      <%=f.text_field :mbox, class: 'form-control', id:"mbox", pattern: MBOX_EMAIL_REGEX, title: "Please follow the correct format with @", required: true %>
    </div>   
    <div class="form-group">
      <label class="form-label">Refresh (Seconds)</label>
      <%=f.text_field :refresh, class: 'form-control', value:"7200", id:"refresh" %>
    </div> 
    <div class="form-group">
      <label class="form-label">Retry (Seconds)</label>
      <%=f.text_field :retry, class: 'form-control', value:"540",id:"retry" %>
    </div>  
    <div class="form-group">
      <label class="form-label">Expire (Seconds)</label>
      <%=f.text_field :expire, class: 'form-control',value:"604800", id:"expire" %>
    </div>  
    <div class="form-group">
      <label class="form-label">Minimum (negative cache ttl) (Seconds)</label>
      <%=f.text_field :minimum, class: 'form-control',value:"3600", id:"minimum" %>
    </div>  
    <div class="form-group">
      <label class="form-label">TTL (Seconds)</label>
      <%=f.text_field :ttl, class: 'form-control', value:"3600", id:"ttl" %>
    </div> 
    <div class="form-group">
      <label class="form-label">Allow zone transfer to these IPs (comma separated list)</label>
      <%=f.text_field :xfer, class: 'form-control', id:"xfer" %>
    </div>  
    <div class="form-group">
      <label class="form-label">Also Notify</label>
      <%=f.text_field :also_notify, class: 'form-control', id:"also_notify" %>
    </div>  
    <div class="form-group">
      <label class="form-label">Update ACL</label>
      <%=f.text_field :update_acl, class: 'form-control', id:"update_acl" %>
    </div> 
    <div class="form-check  mb-3">
      <label class="form-check-label">Active</label>
      <%=f.check_box :status,class: 'form-check-input list-checkbox', checked: "checked"%>
    </div>
    <%=submit_tag 'Create',class: 'btn btn-primary lift mb-4'%>

  </fieldset>
<%end%>
<%if @response && @response["status"]=='ERROR'%>
    <div style="color: red;" class="mt-3"><%=@response["message"]%></</div> 
  <%end%>
</div>


<script type="text/javascript">
  $(document).ready(function (argument) {
    $('#FlashAlertsContainer').removeClass('d-none');
  });
</script>
