<% if @mailing_lists.present? %>
<div class="card mt-4">
<div class="table-responsive">
<table class="table table-sm card-table" style="table-layout: fixed; width:100%">
  <thead>
    <tr>
    <th>Listname</th>
    <th>Domain</th>
    <th style="text-align: end">Actions</th>
    </tr>
  </thead>
  <tbody class="fsbase">
  <%@mailing_lists.each do |mailing_list| %>
    <tr data-hook="admin_orders_index_rows" class="<%= cycle('odd', 'even') %>">
      <td><%= mailing_list.listname%></td>
      <td><%= mailing_list.domain%></td>
         <td><span class="d-flex justify-content-end">
         <%=link_to '<i class="fe fe-trash"></i>'.html_safe,admin_mail_mailing_list_path(id: mailing_list.mailinglist_id), method: :delete, data: {confirm: t('general.delete')} ,class:"btn btn-danger btn-size", style:"margin-right: 5px"%>
         <%=link_to '<i class="fe fe-edit"></i>'.html_safe,edit_admin_mail_mailing_list_path(id: mailing_list.mailinglist_id) ,class:"btn btn-success btn-size"%> 
        </span>
      </td>  
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
<% else %>
  <div class="alert alert-secondary no-objects-found">
  <label class="form-label" style="margin-top: 0.5rem;"> No Mailing Lists found</label>
  </div>
<% end %>

<div class="modal fade" id="mailingListModal" tabindex="-1" role="dialog" aria-labelledby="mailingListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Add Mailing List</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-right: -8px;">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <%=form_for "mailinglist", url: admin_mail_mailing_lists_path, html: {method: :post} do |f|%> 

        <%=hidden_field_tag :domain_id, @mail_domain.try("domain_id")%>
        <form>
          <div class="form-group">
            <label class="form-label">Domain</label>
            <%=f.text_field 'domain', value: @mailinglist.try(:domain), class: 'form-control',required: true%>
          </div>
      
          <div class="form-group">
            <label class="form-label">Listname</label>
            <%=f.text_field 'listname', value: @mailinglist.try(:listname), class: 'form-control',required: true%>
          </div>
      
          <div class="form-group">
            <label class="form-label">Email</label>
            <%=f.email_field 'email', value: @mailinglist.try(:email), class: 'form-control'%>
          </div>
      
          <div class="form-group">
            <label class="form-label">Password</label>
            <%=f.password_field 'password', class: 'form-control'%>
          </div>
      
          <%=submit_tag "Add Mailing List",class: 'btn btn-primary lift'%>
      
      </form>
      <%end%>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id='modal-close-button'>Close</button>
        <button type="button" class="btn btn-primary" id='modal-save-button'>Save changes</button>
      </div> -->
    </div>
  </div>
</div>

<script type="text/javascript">

$(document).on('click', '.admin_mailling_list1', function(event){
      event.preventDefault();
      $('#mailingListModal').modal('show');
    });

$(document).on('click', '.btn-close', function(event){
  $('#mailingListModal').modal('hide');
});
</script>