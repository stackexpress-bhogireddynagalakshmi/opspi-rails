<div class="header mt-4">
  <div class="header-body">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="header-title">
        Domains
        </h1>
      </div>
      <div class="col-auto">
      <%= button_link_to Spree.t(:add_domian),
      new_admin_windows_domain_path,
      class: "btn btn-primary lift",
        icon: 'add.svg',
        id: 'admin_new_domain' %>
      </div>
    </div>

  </div>
</div>

<% if @resources.any? %>
<div class="card">
<div class="table-responsive">
<table class="table table-sm card-table" style="width:100%">
  <thead>
  <tr data-hook="admin_orders_index_headers">
  <th>Domain Name</th>
  <th>Expiration Date</th>
  <th>Type</th>
  <th style="text-align: end;">Action</th>
</tr>
  </thead>
  <tbody class="fsbase">
  <%@resources.each do |domain| %>
    <tr data-hook="admin_orders_index_rows">
      <td><%=domain.domain_name%></td>
      <td><%=domain.expiration_date%></td>
      <td><%=domain.is_sub_domain? ? 'Sub-Domain' : "Top-level Domain" %></td>
      
      <td><%#=link_to 'Edit',edit_admin_windows_domain_path(id: domain.domain_id)%> 
      <span class="d-flex justify-content-end">
        <%=link_to 'Delete', admin_windows_domain_path(id: domain.domain_id), method: :delete, data: {confirm: t('isp_config.mail_domain.delete_alert')}%>
      </span>
      </td>  
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
<% else %>
  <div class="alert alert-secondary no-objects-found">
  <label class="form-label" style="margin-top: 0.5rem;"> No Domains yet. </label>
  </div>
<% end %>



<script type="text/javascript">
  
  $(function () {
  $('[data-toggle="tooltip"]').tooltip();
})
</script>

<script type="text/javascript">
  $(document).ready(function (argument) {
    $('#FlashAlertsContainer').removeClass('d-none');
  });
</script>
