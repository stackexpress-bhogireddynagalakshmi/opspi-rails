<style>
.btn-size{
  padding: 0.3rem 0.45rem;
    font-size: 0.8rem;
}
</style>

<div class="header mt-4">
  <div class="header-body">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="header-title">
        Mail Domains
        </h1>
        
      </div>
      <div class="col-auto">

      <%= button_link_to Spree.t(:add_mail_domian),
      new_admin_mail_domain_path,
      class: "btn btn-primary lift",
        icon: 'add.svg',
        id: 'admin_new_domain' %>
      </div>
    </div>

  </div>
</div>

<% flash.each do |key, value| %>
  <div id="errorExplanation" class="alert alert-danger alert-dismissible d-flex justify-content-center mb-2 fade show" data-hook>
     <ul class="mb-0 pl-0" style="list-style-type: none;">
         <li><%= value %></li>
     </ul>

     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
     <br>
  </div>
  <% end %>

<% if @resources.any? %>
<div class="card">
<div class="table-responsive">
<table class="table table-sm card-table" style="table-layout: fixed; width:100%">
  <thead>
    <tr>
    <th>Domain Name</th>
    <th>Active</th>
    <th style="text-align: end;">Actions</th>
    </tr>
  </thead>
  <tbody class="fs-base">
  <%@resources.each do |domain| %>
    <tr data-hook="admin_orders_index_rows">
      <td><%=domain.domain%></td>
      <td><%=domain.active%></td>
      <td>
      <span class="d-flex justify-content-end">
        <%=link_to '<i class="fe fe-edit"></i>'.html_safe,edit_admin_mail_domain_path(id: domain.domain_id),class:"btn btn-success btn-size", style:"margin-right:4px"%> 
        <%=link_to '<i class="fe fe-trash"></i>'.html_safe, admin_mail_domain_path(id: domain.domain_id, mail_domian: domain.domain), method: :delete, data: {confirm: t('isp_config.mail_domain.delete_alert')},class:"btn btn-danger btn-size"%>
      </span>
        </td>  
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
<% else %>
  <div class="alert alert-secondary no-objects-found">
  <label class="form-label" style="margin-top: 0.5rem;"> No Mail Domains </label>
  </div>
<% end %>


<script type="text/javascript">
  
  $(function () {
  $('[data-toggle="tooltip"]').tooltip();
})
</script>

<script type="text/javascript">
  $(document).ready(function (argument) {
    $('#FlashAlertsContainer').removeClass('d-none');
  });
</script>
