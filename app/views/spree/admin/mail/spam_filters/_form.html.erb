<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @product } %>
<style type="text/css">
  .formSuccess{
    color: green;
  }
</style>


<% url =  action_path %>

 <%=form_for "spamfilter", url: url, html: {method: @filter.present? ? :put : :post} do |f|%> 

  <fieldset>
    <div class="form-group field">
      <label>Email</label>
      <%=f.email_field 'email', value: @filter.try(:email), class: 'form-control'%>
    </div>

     <div class="form-group field">
      <label>Priority</label>
      <%=f.select 'priority',options_for_select(get_priority_dropdown, @filter.try(:priority)),{}, class: 'form-control'%>
    </div>
          
    <div class="form-group field">
      <label>Active</label>
      <%=f.select 'active',options_for_select([['Yes','y'],['No','n']],@filter.try(:active)),{}, class: 'form-control'%>
    </div>
    <%=submit_tag "#{@filter.present? ? 'Update' : 'Add'} Spamfilter",class: 'btn btn-primary'%>

  </fieldset>
<%end%>

<div>
 
  <%if @response && @response["status"]=='ERROR'%>
    <div style="color: red;" class="mt-3"><%=@response["message"]%></</div> 
  <%end%>
</div>

<script type="text/javascript">
  $(document).ready(function (argument) {
    $('#FlashAlertsContainer').removeClass('d-none');
  });

  if($("#sidebar-hosting_controls a").hasClass("collapsed")){
    $('a').attr("aria-expanded","false");  
  } else {
    $('a').attr("aria-expanded","true");
    $('#sidebar-hosting_controls').addClass("show");
    $('#sidebar-mail').addClass("show");
  }
</script>
