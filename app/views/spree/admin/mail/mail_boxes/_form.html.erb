<style type="text/css">
  .formSuccess{
    color: green;
  }
</style>

<div class="header mt-4">
  <div class="header-body">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="header-title">
        <%= link_to Spree.t(:mailbox), admin_mail_mail_boxes_path %> /
        New Mail Box
        </h1>
        
      </div>
      <div class="col-auto">
      </div>
    </div>

  </div>
</div>

<%= flash_messages %>

<% url =  @mail_user.present? ?   admin_mail_mail_box_path(@mail_user.mailuser_id) : admin_mail_mail_boxes_path%>

 <%=form_for "mailuser", url: url, html: {method: @mail_user.present? ? :put : :post} do |f|%> 

  <%=hidden_field_tag :domain_id, @mail_domain.try("domain_id")%>
  <fieldset>
    <div class="form-group">
      <label class="form-label">Name</label>
      <%=f.text_field 'name', value: @mail_user.try(:name), class: 'form-control'%>
    </div>

    <div class="form-group">
      <label class="form-label">Email</label>

      <div class="input-group">
         <%=f.text_field 'email', value: @mail_user.try(:email).try(:split,'@').try(:first), class: 'form-control', required: true, style:"width: 65%;"%>
          <span class="input-group-text">@</span>
          <%=select_tag 'mail_domain', options_for_select(get_mail_domians), class: 'form-select'%>
      </div>
    </div>

    <div class="form-group">
      <label class="form-label">Password</label>
      <%=f.password_field 'password', class: 'form-control'%>
    </div>

    <div class="form-group">
      <label class="form-label">Quota (0 for unlimited)</label>
      <%=f.text_field 'quota', value: @mail_user.try(:quota) || 0, class: 'form-control'%>
    </div>

     <div class="form-group">
      <label class="form-label">Send copy to (Separate multiple email addresses with commas)</label>
      <%=f.text_field 'cc', value: @mail_user.try(:cc), class: 'form-control'%>
    </div>
 

    <div class="form-group form-check">
      <label class="form-check-label">Copy during delivery</label>
      <%=f.check_box 'forward_in_lda', value: @mail_user.try(:forward_in_lda),class: 'form-check-input list-checkbox'%>
    </div>
    
    <div class="form-group">
      <label class="form-label">Spamfilter</label>
      <%=f.select 'policy', options_for_select([['- Inherit domain setting -',0],['Non-paying',1],['Normal',5],['Permissive',7],['Trigger happy',6],['Uncensored',2],['Wants all spam',3],['Wants viruses',4]], @mail_user.try(:policy)), {}, class: 'form-select'%>
    </div>

    <div class="form-group form-check">
      <label class="form-check-label">Enable receiving</label>
      <%=f.check_box 'postfix',{ value: 'y', checked: @mail_user.present? ?  (@mail_user&.postfix == 'y' ? true : false) : true , class: 'form-check-input list-checkbox'}, 'y', 'n'%>
    </div>
    

    <div class="form-group form-check">
      <label class="form-check-label">Disable sending</label>
      <%=f.check_box 'disablesmtp', { value: 'y', checked: @mail_user&.disablesmtp == 'y',class: 'form-check-input list-checkbox'} , 'y', 'n'%>
    </div>

    <div class="form-group form-check">
      <label class="form-check-label">Disable (local) delivering</label>
      <%=f.check_box 'disabledeliver', { value: 'y', checked: @mail_user&.disabledeliver == 'y', class: 'form-check-input list-checkbox'} , 'y', 'n'%>
    </div>

     <div class="form-group form-check">
      <label class="form-check-label">Enable greylisting</label>
      <%=f.check_box 'greylisting', { value: 'y', checked: @mail_user&.greylisting == 'y' ,class: 'form-check-input list-checkbox'} , 'y', 'n'%>
    </div>

     <div class="form-group form-check">
      <label class="form-check-label">Disable IMAP</label>
      <%=f.check_box 'disableimap', { value: 'y', checked: @mail_user&.disableimap == 'y' , class: 'form-check-input list-checkbox'} , 'y', 'n'%>
    </div>
    <div class="form-group form-check">
      <label class="form-check-label">Disable POP3</label>
      <%=f.check_box 'disablepop3', { value: 'y', checked: @mail_user&.disablepop3 == 'y', class: 'form-check-input list-checkbox' } , 'y', 'n'%>
    </div>

    <%=submit_tag "#{@mail_user.present? ? 'Update' : 'Add'} Mailbox",class: 'btn btn-primary lift mb-4'%>

  </fieldset>
<%end%>

<div>
 
  <%if @response && @response["status"]=='ERROR'%>
    <div style="color: red;" class="mt-3"><%=@response["message"]%></</div> 
  <%end%>
</div>


<script type="text/javascript">
  $(document).ready(function (argument) {
    $('#FlashAlertsContainer').removeClass('d-none');
  });
</script>
