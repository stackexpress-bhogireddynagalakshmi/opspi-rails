<% content_for :modal_header do %>
  <h3><%= header%></h3>
<% end %>

<% content_for :modal_body_and_footer do %>

<div class="modal-body">  
 <div id="error_div"  style="color: red;">
   
 </div> 
   <table>
    <tbody>
      
      <tr>
        <td><b>Name:</b></td>
        <td><%=@mailbox.name%></td>
      </tr>

      <tr>
        <td><b>Email:</b></td>
        <td><%=@mailbox.email%></td>
      </tr>
      <tr>
        <td><b>Password:</b></td>
        <td class="password-text">
           <%#=link_to 'Reset Password', reset_password_admin_mail_mailboxes_path(@mailbox.id), remote: true%>         
        </td>
      </tr>
      <tr>
        <td><b>SMTP:</b></td>
        <td><%=@mailbox.smtp%></td>
      </tr>

      <tr>
        <td><b>POP:</b></td>
        <td><%=@mailbox.pop%></td>
      </tr>

      <tr>
        <td><b>IMAP:</b></td>
        <td><%=@mailbox.imap%></td>
      </tr>     

      <tr>
          <td><b>Webmail&nbsp;URL:</b></td>
          <td> <%= @mailbox.webmail_url %></td>
        </tr>  

    </tbody>
    </table>
  </div>
<% end %>

<%= render :partial=>'spree/admin/shared/modal', locals: {modal_width: '40%'} %>
