<% content_for :page_title do %>
 <div class="mt-2"></div>
  <%= link_to Spree.t(:sub_domains), admin_sites_sub_domains_path %> /
  <%= Spree.t(:subdomain_for_website) %>
<% end %>


<% url =  @sub_domain.present? ?   admin_sites_sub_domain_path(@sub_domain.id) : admin_sites_sub_domains_path%>


<%=form_for "sub_domain", url: url, html: {method: @api_resource.present? ? :put : :post} do |f|%>

  <% resource  = @api_resource || @proxy_resource %>

  <fieldset>
    <div class="form-group field">
      <label>Web Domain(eg: example.com):</label>
      <%= collection_select(:sub_domain, :parent_domain_id, @websites, :domain_id, :domain, {prompt: 'Select Web Domain', selected: resource.try(:parent_domain_id)}, {class: 'select2-clear js-filterable'}) if @websites.present? %>
    </div>

    <div class="form-group field">
      <label>Host(Sub domain):</label>
      <%=f.text_field 'domain', value: resource.try(:domain), class: 'form-control', placeholder: "Please enter SubDomain" %>
    </div>
    
    <%=submit_tag "#{@sub_domain.present? ? 'Update' : 'Add'} SubDomain",class: 'btn btn-primary'%>

  </fieldset>
<% end %>

<div style="color: red;" class="mt-3">
  <%=@response[:message].html_safe if @response %>
</</div> 

