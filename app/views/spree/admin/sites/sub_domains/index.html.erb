<div class="header mt-4">
  <div class="header-body">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="header-title">
        Sub Domain
        </h1>
        
      </div>
      <div class="col-auto">
      <%= button_link_to Spree.t(:add_sub_domain),
      new_admin_sites_sub_domain_path,
      class: "btn btn-primary lift",
        icon: 'add.svg',
        id: 'admin_new_sub_domain' %>

      </div>
    </div>

  </div>
</div>

<%= flash_messages %>

<% if @resources.any? %>
<div class="card">
<div class="table-responsive">
<table class="table table-sm card-table" style="width:100%">
  <thead>
    <tr>
    <th>Sub Domain</th>
    <th style="text-align:end;">Actions</th>
    </tr>
  </thead>
  <tbody class="fsbase">
  <%= render partial: 'spree/admin/sites/sub_domains/index', collection: @resources, as: :sub_domain %>
  </tbody>
</table>
</div>
</div>
<% else %>
  <div class="alert alert-secondary no-objects-found">
    <label class="form-label" style="margin-top: 0.5rem;"> You haven't registered the Sub Domain yet.</label>
  </div>
<% end %>




<script type="text/javascript">
  
  $(function () {
    $('[data-toggle="tooltip"]').tooltip();
  })

  $(document).ready(function (argument) {
    $('#FlashAlertsContainer').removeClass('d-none');
  });
</script>
