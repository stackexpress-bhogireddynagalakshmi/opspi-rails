<tr data-hook="admin_orders_index_rows" class="<%= cycle('odd', 'even') %>">
  <td><%=ftp_user.ftp_user_id%></td>
  <td><%=ftp_user.parent_domain_id%></td>
  <td><%=ftp_user.username%></td>
  <td><%=ftp_user.uid%></td>
  <td><%=ftp_user.gid%></td>
  <td><%=ftp_user.dir%></td>
  <td>
    <div class="custom-control custom-switch">
      <%= check_box_tag('active', ftp_user.active, ('checked' if (ftp_user.active == 'y')), class: "custom-control-input", data_ftp_user_id: ftp_user.ftp_user_id, id: "data_ftp_user_#{ftp_user.ftp_user_id}", onclick: "updateFtpUser(this)" ) %>
      <label class="custom-control-label" for="data_ftp_user_<%=ftp_user.ftp_user_id %>"></label>
    </div>
  <td>
    <%=link_to 'Delete', admin_sites_ftp_user_path(ftp_user.ftp_user_id), method: :delete%>
  </td>  
</tr>
