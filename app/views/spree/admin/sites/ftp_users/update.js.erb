<%if @response[:success] == true%>
  $("#myModal").modal('hide')
  $('#ftp_users_table #ftp_user_id_<%=@ftp_user.id%>').replaceWith("<%=j render partial: 'spree/admin/sites/ftp_users/row', locals: { ftp_user: @ftp_user}%>")
<%else%>
  $('#error_div').html("<%=j @response[:message].html_safe%>");
<%end%>