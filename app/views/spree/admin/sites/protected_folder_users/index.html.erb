<% content_for :page_title do %>
 Folder User
<% end %>
<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:add_protected_folder_user),
    new_admin_sites_protected_folder_user_path,
    class: "btn-success",
      icon: 'add.svg',
      id: 'add_protected_folder_user' %>
<% end %>

<% if @resources.any? %>
<div data-nav-x-wrapper>
  <div data-nav-x-container>
    <table class="table" id="listing_orders" data-hook data-nav-x-content>
      <thead>
        <tr data-hook="admin_orders_index_headers">
          <th>ID</th>
          <th>Folder</th>
          <th>UserName</th>
          <th>active</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'spree/admin/sites/protected_folder_users/index', collection: @resources, as: :protected_folder_user %>
      </tbody>
    </table>
  </div>
</div>
<% else %>
  <div class="alert alert-info no-objects-found">
    You haven't registered the Folder User yet.
  </div>
<% end %>

<script type="text/javascript">
  
  $(function () {
    $('[data-toggle="tooltip"]').tooltip();
  })

  $(document).ready(function (argument) {
    $('#FlashAlertsContainer').removeClass('d-none');
  });

</script>
