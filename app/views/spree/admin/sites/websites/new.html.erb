<% content_for :page_title do %>
 <div class="mt-2"></div>
  <%= link_to Spree.t(:websites), admin_sites_websites_path %> /
  <%= Spree.t(:web_domain) %>
<% end %>


<% url =  (@api_resource.present? && @api_resource.try(:website_id).present?) ?   admin_sites_website_path(@api_resource.website_id) : admin_sites_websites_path%>

 <%=form_for "website", url: url, html: {method: @api_resource.present? ? :put : :post} do |f|%> 

  <fieldset>
    <div class="form-group field">
      <label>Domain(eg: example.com)</label>
      <%=f.text_field 'domain', value: @api_resource.try(:domain), class: 'form-control'%>
    </div>

   
    <div class="form-group field">
      <label>Active</label>
      <%=f.select 'active',options_for_select(Website.actives.collect{ |k, v| [v, k]}, @api_resource.try(:active)),{}, class: 'form-control'%>
    </div>
   
    <%=submit_tag "#{@api_resource.present? ? 'Update' : 'Add'} Web Domain",class: 'btn btn-primary'%>

  </fieldset>
<%end%>

<div style="color: red;" class="mt-3">
  <%=@response[:message].html_safe if @response %>
</</div> 
