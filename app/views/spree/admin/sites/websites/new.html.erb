<% content_for :page_title do %>
 <div class="mt-2"></div>
  <%= link_to Spree.t(:websites), admin_sites_websites_path %> /
  <%= Spree.t(:web_domain) %>
<% end %>


<% url =  (@website.present? && @website.try(:website_id).present?) ?   admin_sites_website_path(@website.website_id) : admin_sites_websites_path%>

 <%=form_for "website", url: url, html: {method: @website.present? ? :put : :post} do |f|%> 

  <fieldset>
    <div class="form-group field">
      <label>Domain</label>
      <%=f.text_field 'domain', value: @website.try(:domain), class: 'form-control'%>
    </div>

   
    <div class="form-group field">
      <label>Active</label>
      <%=f.select 'active',options_for_select(Website.actives.collect{ |k, v| [v, k]}, @website.try(:active)),{}, class: 'form-control'%>
    </div>
   
    <%=submit_tag "#{@website.present? ? 'Update' : 'Add'} Web Domain",class: 'btn btn-primary'%>

  </fieldset>
<%end%>

<div style="color: red;" class="mt-3">
  <%=@response[:message].html_safe if @response %>
</</div> 
