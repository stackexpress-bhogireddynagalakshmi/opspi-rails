<% if target && target.errors.any? %>
  <div id="errorExplanation" class="alert alert-danger alert-dismissible d-flex justify-content-center mb-0 fade show" data-hook>
     <ul class="mb-0 pl-0" style="list-style-type: none;">
       <% target.errors.full_messages.each do |msg| %>
        <% unless (msg.include?("Ship")) %>
         <li><%= msg %></li>
        <%end%>
       <% end %>
     </ul>

     <button type="button" class="close-button x-button" data-dismiss="alert" aria-label="Close">&times;</button>
     <br>
  </div>
<% end %>

<style type="text/css">
.close-button {
    border: none;
    display: inline-block;
    vertical-align: middle;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    background-color: inherit;
    text-align: center;
    cursor: pointer;
    white-space: nowrap
}

.x-button{
   position: absolute;
   right:10px; 
}

</style>
