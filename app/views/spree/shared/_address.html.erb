<div class="address vcard">
  <div class="fn"><%= address.try(:full_name) %></div>
  <% unless address.try(:company).blank? %>
    <div class="org">
      <%= address.try(:company) %>
    </div>
  <% end %>
  <div class="adr">
    <div class="street-address">
      <div class="street-address-line">
        <%= address.try(:address1) %>
      </div>
      <% unless address.try(:address2).blank? %>
        <div class="street-address-line">
          <%= address.try(:address2) %>
        </div>
      <% end %>
    </div>
    <div class="local">
      <span class="locality"><%= address.try(:city) %></span>
      <% if Spree::Config[:address_requires_state] %>
        <span class="region"><%= address.try(:state_text) %></span>
      <% end %>
      <span class="postal-code"><%= address.try(:zipcode) %></span>
      <div class="country-name"><%= address.try(:country).try(:name) %></div>
    </div>
  </div>
</div>
