<%= link_to(spree.edit_address_path(address), method: :get, class: 'ml-1 d-inline-block', data: { hook: 'edit_address' }) do %>
  <%= inline_svg_tag('edit.svg', width: 24, height: 24) %>
<% end %>

<%= link_to '#', class: 'js-delete-address-link ml-3 delete-icon', data: { turbolinks: false, hook: 'remove_address', address: spree.address_path(address) }, aria: { label: Spree.t('address_book.remove_address') } do %>
    <%= icon(name: 'garbage_2',
             classes: '',
             width: 24,
             height: 24) %>
<% end %>

<script type="text/javascript"> 
$(document).ready(function (argument) {
$(".delete-icon").click(function(){
  $("#delete-address-popup").removeClass('d-none');
  $("#delete-address-popup").addClass('shown');
  $('#myModal1').attr('aria-hidden','false');
  $("#myModal1").css('display','block');
  $("#myModal1").addClass('show');
});
});

</script>