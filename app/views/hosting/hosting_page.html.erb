 <div class="container mt-4">
 	
	<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
      <h3 class="display-4"> <%=params[:slug].titleize%> Pricing</h3>
      <p class="lead">Quickly build an effective pricing table for your potential customers with this Bootstrap example. It's built with default Bootstrap components and utilities with little customization.</p>
    </div>
 	
 </div>

    <div class="container">
      <div class="card-deck mb-3 text-center">
        <%@products.each do |product|%>
        <div class="card mb-4 box-shadow">
          <div class="card-header">
            <h4 class="my-0 font-weight-normal"><%=product.name%></h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title"><%=number_to_currency(product.price)%> <small class="text-muted">/ mo</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li><%=product.no_of_website%> website included</li>
              <%if product.ssl_support%>
                <li>SSL Support included</li>
              <%end%>
              <li><%=product.storage%> GB of storage</li>
              <li><%=product.domain%> domain included</li>
              <li><%=product.subdomain%> subdomain included</li>
               <li><%=product.mailbox%> mailbox included</li>

              

              <li>Email support</li>
              <li>Help center access</li>
            </ul>
            <%=link_to 'Buy Now',spree.product_path(product.slug),class: 'btn btn-lg btn-block btn-outline-primary'%>
          </div>
        </div>
        <%end%>

